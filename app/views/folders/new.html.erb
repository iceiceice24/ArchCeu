<h1>New Folder</h1>

<%= form_with(model: @folder, url: folders_path) do |form| %>
  <% if @folder.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@folder.errors.count, "error") %> prohibited this folder from being saved:</h2>

      <ul>
        <% @folder.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

   <div class="field">
    <%= form.label :files %>
    <%= form.file_field :files, multiple: true %>
  </div>


  <div class="field">
    <%#= form.label :parent_folder_id %>
    <%= form.hidden_field :parent_folder_id, value: params[:parent_folder_id] %>
  </div>


  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

<%= link_to 'Back', folders_path %>
