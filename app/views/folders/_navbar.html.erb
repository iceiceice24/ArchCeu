<nav>
  <div class='container'>
    <a>        
      <%= image_tag("logo.png", width: '110', height: '50', class: "d-inline-block align-top", alt: "logo", loading: "lazy") %>
    </a>
    
    <div class="search-bar">
      <%= form_tag(search_folders_path, class: "search-bar d-flex", method: "get") do %>
        <i class="uil uil-search"></i>
        <%= image_tag("search.png", width: '60', height: '40', class: "d-inline-block align-top", alt: "logo", loading: "lazy") %>
