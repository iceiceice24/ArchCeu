          <%= link_to 'View Folders', user_folders_path(current_user)%>
          <%= link_to 'Update Profile', edit_user_registration_path %>
          <%= link_to 'Log out', destroy_user_session_path, 'data-turbo-method': :delete %>
        </div>
    </div>

  </div>
