<h1>Folders</h1>

<%= form_tag(search_folders_path, method: "get") do %>
  <%= text_field_tag :q, params[:q], placeholder: "Search Folder" %>
  <%= submit_tag "Search" %>
<% end %>

<% if current_user %>
  <% if @folders %>
  
    <div class="card-deck">
    <ul data-controller="sortable" class="folder-list"> <!-- Add a custom class for styling -->
    
    <ul data-controller="sortable">
      <% @folders.each do |folder| %>
      <li class="folder-item"> <!-- Add a custom class for styling -->
        <a href="<%= folder_path(folder) %>" class="card folder-link">
          <div class="card-body">
          
            <div class="folder-name">
              
            </div>
            <!-- Additional folder details or actions can be added here -->
          </div>
        </a>
        <%= folder.name.truncate(10)%>
      </li>
      <% end %>
    </ul>
    </div>
  
  <%= link_to 'New Folder', new_user_folder_path(@user) %>
  <% else %>
    <p>No folders found.</p>
  <% end %>
<% else %>
  <%= link_to "Login", new_user_session_path %>
<% end %>


<%= link_to 'Back', 'javascript:history.go(-1);' %>

<table>
  <thead>
    <tr>
      <th>File name</th>
      <th>File Type</th>
      <th>Date Created</th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td> </td>
    </tr>
  </tbody>
</table>