<% if current_user %>
  <% if @folders %>  
    <div class="card-deck">
    <ul data-controller="sortable" class="folder-list"> <!-- Add a custom class for styling -->
      <% @folders.each do |folder| %>
      <li class="folder-item"> <!-- Add a custom class for styling -->
        <a href="<%= folder_path(folder) %>" class="card folder-link">
          <div class="card-body">
            <div class="folder-name">              
            </div>
            <%= image_tag("folder.jpg", width: '90', height: '200') %>
          </div>
        </a>
        <%= folder.name.truncate(10) %>
      </li>
      <% end %>
    </ul>
    </div>  
<div class="vertical-add">
  <%= link_to 'New Folder', new_user_folder_path(@user), type: "button", class: "btn btn-button " %>
</div>
  <% else %>
    <p>No folders found.</p>
  <% end %>
<% else %>
  <%= link_to "Login", new_user_session_path %>
<% end %>
<div class="vertical-edit">
<%= link_to 'Back', 'javascript:history.go(-1);', type: "button", class: "btn btn-button " %>
</div>