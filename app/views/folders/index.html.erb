<% if current_user  %>
  <% if @folders %>  
    <div class="card-deck">
    <ul data-controller="sortable" class="folder-list"> 
      <h1>YOUR folders</h1>
      <% @folders.each do |folder| %>
      <li class="folder-item"> 
        <a href="<%= folder_path(folder) %>" class="card folder-link">
          <%= folder.department%>
          <div class="card-body">
            <div class="folder-name">              
            </div>
            <%= image_tag("folder.jpg", width: '90', height: '200') %>
          </div>
        </a>
      <div class="folderMove">
        <%= folder.name.truncate(10)%>
      </div>
      </li>
      <% end %>
    </ul>
    </div>  
    <table>
    <tr>
  <div class="vertical-add">
  <th><%= link_to 'New Folder', new_user_folder_path(@user), type: "button", class: "btn btn-button moving " %></th>
  </div>
  <% else %>
    <p>No folders found.</p>
  <% end %>
  <div class="vertical-edit">
  <th><%= link_to 'Back', 'javascript:history.go(-1);', type: "button", class: "btn btn-button moving " %></th>
  </div>
</tr>
</table>
<% else %>


  <%= link_to "Login", new_user_session_path %>
<% end %>

<h1> Shared</h1>
<% @share.each do |shared|%>
  <% if shared.department == current_user.department%>  
    <%= link_to shared.name, folder_path(shared)%><br>
  <%end %>
<%end %>
