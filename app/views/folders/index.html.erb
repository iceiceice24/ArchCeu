<h1>Folders</h1>

<%= form_tag(search_folders_path, method: "get") do %>
   <h4> Case sensitive </h4>
  <%= text_field_tag :q, params[:q], placeholder: "Search Folder" %>
  <%= submit_tag "Search" %>
<% end %>

  <% if current_user %>
    <%= link_to 'show', folders_path, class:'btn btn-secondary' %>
    <ul>

  <% if @folders %>
    <% @folders.each do |folder| %>
      <li><%= link_to folder.name, folder %></li>
    <% end %>
  <% else %>
    <li>No folders found.</li>
  <% end %>
</ul>
  <% else %>
    <%= link_to "Login", new_user_session_path %>
    
  <% end %>


<%= link_to 'New Folder', new_folder_path %>