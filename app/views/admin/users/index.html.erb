<head>
  <link rel="stylesheet" href="users_style.css">
</head>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Email</th>
            <th scope="col">Role</th>
            <th scope="col">Department</th>
            <th scope="col">Edit User</th>
            
        </tr>
    </thead>
    <tbody>
        <% @users.each do |user| %>
        <tr>       
            <td><%= user.email %></td>
            <td><%= user.role %></td>
            <td><%= user.department&.name %> </td>
            <td><%= link_to 'Edit User', edit_admin_user_path(user.id) %></td>  
            
        </tr>
        <% end %>
    </tbody>
</table>
